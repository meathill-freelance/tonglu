#footer
  background-color #394473
  color white
  font-size 1rem
  font-weight 200

  .container
    display flex

  p
    margin-bottom 0

  .info
    flex 1
    display flex
    flex-direction column
    justify-content space-between

    .links
      display flex

      h2
        font-size 1rem
        line-height 1.5
        margin-bottom 0

      ul
        padding 0
        margin 0
        list-style none
        display flex

  a
    color white

    &:hover
      color var(--yellow)

  .phone
    font-size 2rem
    font-weight normal

  .hint
    color #7685C8

  @media (max-width $xs-width - 1px)
    padding 2rem 0

    .container
      flex-direction column

    .qrcode
      display flex
      justify-content center
      margin-bottom 2rem

      img
        display block
        margin 0 auto

    .info
      margin 0 auto

      .phone
        line-height 1.1

      .hint
        margin-bottom .5em

    .links
      margin-bottom 1em

      ul
        width 100%
        justify-content center

      li
        margin-right .75rem

    .logo
      margin-top 2em
      display flex
      justify-content center

  @media (min-width $xs-width)
    padding 2.8rem 0

    .qrcode
      width 10rem

      img
        display block
        width 100%

    .info
      margin 0 1rem

      > p
        line-height 100%

        &:last-child
          padding-bottom .1rem

    .links

      li + li
        margin-left .75em
