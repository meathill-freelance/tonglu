#header
  .single-post &,
  .tax-house_category &
    background-color white
    box-shadow 0 .1rem .5rem rgba(0,0,0,.2)

  .navbar-brand
    padding 0 0 .3rem
    margin 0

    .logo
      height 4rem

  .navbar-toggler
    display none
    margin-bottom 0

  .navbar
    justify-content space-between
    height 6rem
    padding 0
    position static

  .nav-item

    > a
      color $black
      display flex
      flex-direction column
      align-items center
      transition all .5s

      &:hover
        color $active-color
        text-decoration none

    .cn
      font-size 1rem

    .en
      font-size .7rem
      font-weight 100

    span
      text-transform uppercase

    &.active
      position relative

      &::after
        content: ''
        position absolute
        overflow hidden
        background-color $active-color

  @media (max-width $xs-width)
    &
      position relative

    .navbar
      height 3.5rem
      padding .5rem 0

    .navbar-brand .logo
      height 2.5rem

    .navbar-toggler
      display block

    .navbar-nav
      background-color white
      position absolute
      top 3.5rem
      left 0
      width 100%
      max-height 0
      transition max-height .5s
      overflow hidden
      z-index 1

    #navbar-toggler:checked ~ .navbar-nav
      max-height 100vh

    .nav-item
      border-top 1px solid #f3f3f3

      &.active::after
        top 0
        left 0
        bottom 0
        width .4rem

      > a
        flex-direction row
        padding-left 2rem

        &:hover
          background-color #F3F3F3

      .cn
        margin-right 1em

    .dropdown-menu
      border none

  @media (min-width $xs-width + 1px)
    .navbar-nav
      display flex
      flex-direction row
      align-self flex-end
      padding-bottom .5rem
      margin-left auto

    .nav-item
      width 4.5rem
      padding-bottom .25rem

      + .nav-item
        margin-left 2rem

      > a:hover
        text-shadow 0 .2rem .2rem alpha($active-color, .25)
        transform translateY(-.25rem)

      &.active
        position relative

        &::after
          left 0
          right 0
          bottom 0
          height .4rem
          border-radius .2rem
          box-shadow 0 .3rem .6rem rgba(0, 48, 255, .5)

    .dropdown
      position static

    .dropdown-menu
      background rgba(0,0,0,.8)
      color white
      display block
      font-size 1rem
      position absolute
      top 6rem
      left 0
      width 100%
      height 0
      overflow hidden
      transition height .5s
      padding 0
      margin 0
      border none
      border-radius 0

      .container
        display flex
        justify-content flex-end
        align-items center
        height 100%

      &.show
        height 4rem

    .dropdown-item
      color gray
      width auto
      border 1px solid transparent

      &.active,
      &:hover
        color $active-color
        border 1px solid currentColor
        border-radius 1em
        background-color transparent

      + .dropdown-item
        margin-left 3.5rem

#lang
  margin-left 2rem

  .btn,
  .dropdown-menu
    font-size .7rem
